<h2><%= @task.name %></h2>
<br>
<p><%= @task.details %></p>
<br>
<p>Updated at: <%= @task.updated_at %></p>
<br>
<p><%= link_to "Edit this task", edit_task_path(@task) %></p>

<p><%= link_to "Delete this task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>

<p><%= link_to "Go back to your task list", tasks_path %></p>
